{
  "name": "scorm-template",
  "version": "1.0.0",
  "description": "HTML templates for TetraLogical SCORM training modules",
  "scripts": {
    "scss": "sass _src/scss/core.scss  theme/css/core.css",
    "serve": "browser-sync start --server --files 'theme/css/*.css, **/*.html'",
    "watch:css": "onchange '_src/scss' -- npm run scss",
    "start": "npm run serve & npm run watch:css"
  },
  "author": "Ian Pouncey",
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.39.0"
  }
}
